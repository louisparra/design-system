{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Design tokens schema",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "owner": { "type": "string" }
      },
      "required": ["version", "owner"]
    },
    "color": { "type": "object" },
    "type": { "type": "object" },
    "space": { "type": "object" },
    "radius": { "type": "object" },
    "motion": { "type": "object" }
  },
  "required": ["meta"],
  "additionalProperties": true
}